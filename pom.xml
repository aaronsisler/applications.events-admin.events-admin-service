<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.2.5</version>
    </parent>

    <groupId>com.ebsolutions.eventsadminservice</groupId>
    <artifactId>events-admin-service-parent</artifactId>
    <version>0.9.0</version>
    <packaging>pom</packaging>

    <modules>
        <module>app</module>
    </modules>

    <properties>
        <version.jdk>17</version.jdk>

        <!-- Versions: Plugins -->
        <version.org.apache.maven.plugins.maven-enforcer-plugin>
            3.4.1
        </version.org.apache.maven.plugins.maven-enforcer-plugin>
        <version.org.apache.maven.plugins.maven-compiler-plugin>
            3.11.0
        </version.org.apache.maven.plugins.maven-compiler-plugin>
        <version.org.openapitools.openapi-generator-maven-plugin>
            7.0.1
        </version.org.openapitools.openapi-generator-maven-plugin>
        <version.org.codehaus.gmavenplus.gmavenplus-plugin>
            3.0.2
        </version.org.codehaus.gmavenplus.gmavenplus-plugin>

        <!-- Versions: Dependencies -->
        <version.lombok>1.18.28</version.lombok>
        <version.com.google.code.gson>2.10.1</version.com.google.code.gson>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.logging.log4j</groupId>
                <artifactId>log4j-bom</artifactId>
                <version>2.20.0</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <!-- Makes sure that all dependencies are non-conflicting -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <version>${version.org.apache.maven.plugins.maven-enforcer-plugin}</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
